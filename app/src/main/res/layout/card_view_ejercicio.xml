<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_ejercicio"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    card_view:cardCornerRadius="4dp"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:elevation="4dp"
    >


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <ImageView
            android:id="@+id/iv_cv_ejercicio_foto"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="false"
            android:padding="10dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/pierna_cable_abduction"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintHorizontal_bias="0.454"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline12"
            android:orientation="horizontal"
            card_view:layout_constraintGuide_percent="0.5"
            tools:layout_editor_absoluteY="325dp"
            tools:layout_editor_absoluteX="21dp" />

        <CheckBox
            android:id="@+id/cb_cv_ejercicio_favorito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:button="@drawable/custom_checkbox_heart"
            android:elevation="4dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="5dp"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/guideline12"
            android:layout_marginTop="2dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/viewdivider"
            android:layout_marginBottom="2dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/negro"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="0dp"
            card_view:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="0dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/guideline12"
            android:layout_marginTop="0dp"
            android:id="@+id/view3" />

        <TextView
            android:id="@+id/tv_cv_ejercicio_titulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/pierna_cable_abduction_nombre"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_titulo"
            android:layout_marginLeft="8dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintRight_toLeftOf="@+id/cb_cv_ejercicio_favorito"
            android:layout_marginRight="2dp"
            card_view:layout_constraintTop_toTopOf="@+id/view3"
            android:layout_marginTop="8dp" />


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/negro"
            android:layout_marginTop="0dp"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_cv_ejercicio_titulo"
            android:layout_marginLeft="0dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="0dp"
            card_view:layout_constraintRight_toRightOf="parent"
            android:id="@+id/viewdivider"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/utilidad_texto"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:layout_marginLeft="8dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@+id/viewdivider" />

        <TextView
            android:id="@+id/tv_cv_ejercicio_utilidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="8dp"
            android:text="@string/musculo_pierna"
            android:textColor="@color/blanco"
            android:textSize="12sp"
            card_view:layout_constraintLeft_toRightOf="@+id/textView4"
            card_view:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@+id/viewdivider"
            />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/mecanismo_texto"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:layout_marginTop="0dp"
            card_view:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginLeft="8dp"
            card_view:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tv_cv_ejercicio_mecanismo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/mecanismo_isolated"
            android:textColor="@color/blanco"
            android:textSize="12sp"
            android:layout_marginTop="0dp"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_cv_ejercicio_utilidad"
            android:layout_marginRight="8dp"
            card_view:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="2dp"
            card_view:layout_constraintLeft_toRightOf="@+id/textView5" />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/fuerza_texto"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:layout_marginTop="0dp"
            card_view:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginLeft="8dp"
            card_view:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tv_cv_ejercicio_fuerza"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/push"
            android:textColor="@color/blanco"
            android:textSize="12sp"
            android:layout_marginTop="0dp"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_cv_ejercicio_mecanismo"
            android:layout_marginRight="8dp"
            card_view:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="2dp"
            card_view:layout_constraintLeft_toRightOf="@+id/textView8" />

        <ImageView
            android:id="@+id/iv_cv_ejercicio_informacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_help"
            android:layout_marginRight="2dp"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="2dp" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>


<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonPP" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorAccentAlpha</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:background">@color/colorAccentAlpha</item>

        <item name="android:textColor">@color/blanco</item>
        <item name="android:textSize">@dimen/size_btn_pp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">@dimen/drawablePadding_btn_pp</item>
        <item name="android:paddingLeft">@dimen/paddingLeft_btn_pp</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="ButtonDialogo" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorAccentChidoAlpha</item>
        <item name="colorControlHighlight">@color/colorAccentChido</item>
        <item name="android:background">@color/colorAccentChidoAlpha</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:textSize">@dimen/size_btn_pp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>






    <!-- parent="Widget.AppCompat.Button.Colored"> -->
    <style name="ButtonEditarRutinaDias" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorAccentAlpha</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:background">@color/colorAccentAlpha</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:textSize">@dimen/size_btn_pp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="ButtonEditarRutinaAddEjercicio" parent="ButtonEditarRutinaDias">
        <item name="colorButtonNormal">@color/colorAccentChido</item>
        <item name="colorControlHighlight">@color/colorAccentChidoAlpha</item>
        <item name="android:background">@color/colorAccentChido</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:textSize">@dimen/text_size_btn_rutina</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">0dp</item>

        <item name="android:drawablePadding">-5dp</item>
        <item name="android:paddingLeft">10dp</item>


    </style>


</resources>

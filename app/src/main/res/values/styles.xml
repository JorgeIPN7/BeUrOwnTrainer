<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="ButtonPP" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorAccentAlpha</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:background">@color/colorAccentAlpha</item>

        <item name="android:textColor">@color/blanco</item>
        <item name="android:textSize">@dimen/size_btn_pp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">@dimen/drawablePadding_btn_pp</item>
        <item name="android:paddingLeft">@dimen/paddingLeft_btn_pp</item>
        <item name="android:gravity">center_vertical|left</item>

    </style>

    <!-- parent="Widget.AppCompat.Button.Colored"> -->
    <style name="ButtonEditarRutinaDias" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorAccentAlpha</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:background">@color/colorAccentAlpha</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:textSize">@dimen/size_btn_pp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>


</resources>
